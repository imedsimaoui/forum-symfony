{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
    .wrap { max-width: 600px; margin: 0 auto; padding: 24px 20px 64px; }
    .box { background: rgba(17, 24, 39, 0.9); border: 1px solid #1f2937; border-radius: 12px; padding: 16px; }
    .captcha { color: var(--muted); font-size: 14px; margin-top: 6px; }
</style>

<div class="wrap">
    <h1>Inscription</h1>
    <div class="box">
        {{ form_start(formulaireInscription) }}
            {{ form_row(formulaireInscription.email) }}
            {{ form_row(formulaireInscription.pseudo) }}
            {{ form_row(formulaireInscription.motDePasse) }}
            {{ form_row(formulaireInscription.nom) }}
            {{ form_row(formulaireInscription.prenom) }}
            {{ form_row(formulaireInscription.age) }}
            {{ form_row(formulaireInscription.telephone) }}
            {{ form_row(formulaireInscription.ville) }}
            <div class="captcha">Captcha: {{ captcha_question }}</div>
            {{ form_row(formulaireInscription.captcha) }}
            <button class="btn primary" type="submit">Cr√©er mon compte</button>
        {{ form_end(formulaireInscription) }}
        <datalist id="liste-villes">
            <option value="Amiens"></option>
            <option value="Paris"></option>
            <option value="Lille"></option>
            <option value="Lyon"></option>
            <option value="Marseille"></option>
            <option value="Toulouse"></option>
            <option value="Bordeaux"></option>
            <option value="Nantes"></option>
            <option value="Montpellier"></option>
            <option value="Strasbourg"></option>
        </datalist>
    </div>
</div>
{% endblock %}
