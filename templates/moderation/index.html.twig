{% extends 'base.html.twig' %}

{% block title %}Modération{% endblock %}

{% block body %}
<style>
    .wrap { max-width: 980px; margin: 0 auto; padding: 24px 20px 64px; }
    .section { background: rgba(17, 24, 39, 0.8); border: 1px solid #1f2937; border-radius: 12px; padding: 16px; margin-bottom: 18px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { text-align: left; padding: 8px; border-bottom: 1px solid #1f2937; }
</style>

<div class="wrap">
    <h1>Modération</h1>

    <div class="section">
        <h3>Ajouter un thème</h3>
        {{ form_start(formulaireTheme) }}
            {{ form_row(formulaireTheme.titre) }}
            <button class="btn primary" type="submit">Créer</button>
        {{ form_end(formulaireTheme) }}
    </div>

    <div class="section">
        <h3>Participants</h3>
        <table>
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Pseudo</th>
                    <th>Vérifié</th>
                    <th>Rôle</th>
                </tr>
            </thead>
            <tbody>
                {% for user in utilisateurs %}
                    <tr>
                        <td>{{ user.email }}</td>
                        <td>{{ user.pseudo }}</td>
                        <td>{{ user.verifie ? 'Oui' : 'Non' }}</td>
                        <td>{{ user.moderateur ? 'Modérateur' : 'Participant' }}</td>
                    </tr>
                {% else %}
                    <tr><td colspan="4">Aucun utilisateur.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
