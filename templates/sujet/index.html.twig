{% extends 'base.html.twig' %}

{% block title %}Discussion — {{ sujet.titre }}{% endblock %}

{% block body %}
<style>
    .wrap { max-width: 980px; margin: 0 auto; padding: 24px 20px 64px; }
    .message { background: rgba(17, 24, 39, 0.7); border: 1px solid #1f2937; border-radius: 12px; padding: 12px; margin-bottom: 10px; }
    .meta { color: var(--muted); font-size: 13px; margin-bottom: 6px; }
    .form-box { margin-top: 18px; background: rgba(17, 24, 39, 0.9); border: 1px solid #1f2937; border-radius: 12px; padding: 16px; }
    .mod-actions { display: flex; gap: 8px; margin-top: 8px; }
</style>

<div class="wrap">
    <h1>{{ sujet.titre }}</h1>
    <p class="meta">Thème: <a href="{{ path('app_theme', {id: sujet.theme.id}) }}">{{ sujet.theme.titre }}</a></p>

    {% for message in messages %}
        <div class="message">
            <div class="meta">{{ message.auteur.pseudo }} — {{ message.creeLe|date('d/m/Y H:i') }}</div>
            <div>{{ message.contenu|nl2br }}</div>
            {% if is_granted('ROLE_MODERATOR') %}
                <div class="mod-actions">
                    <a class="btn ghost" href="{{ path('app_moderation_message_modifier', {id: message.id}) }}">Modifier</a>
                    <form method="post" action="{{ path('app_moderation_message_supprimer', {id: message.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('supprimer_message_' ~ message.id) }}">
                        <button class="btn ghost" type="submit" onclick="return confirm('Supprimer ce message ?');">Supprimer</button>
                    </form>
                </div>
            {% endif %}
        </div>
    {% else %}
        <div class="message">Aucun message pour le moment.</div>
    {% endfor %}

    {% if app.user %}
        <div class="form-box">
            <div id="message-actions">
                <button class="btn primary" type="button" id="message-ouvrir">Ajouter un message</button>
            </div>
            <div id="message-formulaire" style="display:none;">
                <h3>Ajouter un message</h3>
                {{ form_start(formulaireMessage) }}
                    {{ form_row(formulaireMessage.contenu) }}
                    <div style="display:flex; gap:8px;">
                        <button class="btn primary" type="submit">Enregistrer</button>
                        <button class="btn ghost" type="button" id="message-fermer">Fermer</button>
                    </div>
                {{ form_end(formulaireMessage) }}
            </div>
        </div>
        <script>
            window.addEventListener('DOMContentLoaded', () => {
                const boutonOuvrir = document.getElementById('message-ouvrir');
                const boutonFermer = document.getElementById('message-fermer');
                const formulaire = document.getElementById('message-formulaire');
                const actions = document.getElementById('message-actions');
                if (boutonOuvrir && boutonFermer && formulaire && actions) {
                    boutonOuvrir.addEventListener('click', () => {
                        formulaire.style.display = 'block';
                        actions.style.display = 'none';
                    });
                    boutonFermer.addEventListener('click', () => {
                        formulaire.style.display = 'none';
                        actions.style.display = 'block';
                    });
                }
            });
        </script>
    {% endif %}
</div>
{% endblock %}
